# Kordia Backend Configuration

# Application
APP_NAME=Kordia API
APP_VERSION=2.0.0
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000

# CORS (comma-separated origins)
CORS_ORIGINS=*

# Data directories
DATA_DIR=./Kordia_data

# Cache configuration
CACHE_TTL=5400
CACHE_MAX_SIZE=500
CACHE_CLEANUP_DAYS=30

# yt-dlp configuration
YTDLP_QUIET=true
YTDLP_NO_WARNINGS=true

# Audio format
AUDIO_FORMAT=m4a
AUDIO_CODEC=m4a
